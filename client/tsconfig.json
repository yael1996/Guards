{
  "inlineSource": true,
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "jsx": "react",
    "rootDir": "src",
    "moduleResolution": "node",
    "strictNullChecks": false,
    "esModuleInterop": true,
    "lib": [
      "es6",
      "dom"
    ],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "node_modules/tsc/bin/lib.es6.d.ts"
  ],
  "exclude": [
    "dist/**/*",
    "node_modules"
  ],
  "compileOnSave": true
}
